C CALCULATES THE ESCAPE VELOCITY FROM EARTH  
  SIMPLE: PROGRAM;
  DECLARE MINUS11 SCALAR 0-11;
  DECLARE POWEROFTEN SCALAR 10**MINUS11;
  DECLARE G CONSTANT 6.674*POWEROFTEN;
  DECLARE MASS SCALAR 5972*10E20;
  DECLARE OUTPUT SCALAR MASS*G
  OUTPUT = OUTPUT*2
  DECLARE R SCALAR 6371*1000;
  OUTPUT = OUTPUT/R
  OUTPUT = OUTPUT**0.5
  WRITE(1) OUTPUT
  CLOSE SIMPLE;
