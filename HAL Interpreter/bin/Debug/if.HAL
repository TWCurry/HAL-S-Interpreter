C PROGRAM TO FIND THE AREA OF A CIRCLE
  SIMPLE: PROGRAM;
  DECLARE RADIUS SCALAR 0;
  DECLARE PI CONSTANT 3.1415926535;
  READ(1) RADIUS;
  DECLARE RSQUARED SCALAR RADIUS**2;
  DECLARE AREA SCALAR RSQUARED*PI;
  DECLARE OUTPUT SCALAR FALSE;
  DECLARE PROMPT STRING DISPLAY_VARIABLE?;
  WRITE(1) PROMPT;
  READ(1) OUTPUT;
  IF OUTPUT = 1;
  WRITE(1) AREA;
  END;
  END PROGRAM;